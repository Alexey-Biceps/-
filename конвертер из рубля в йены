namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("приветствую, это конвертер валют: из рубля в йены!");
            string rub;
            Console.WriteLine("введите сумму, которую необходимо перевести в японскую валюту: ");
            rub = Console.ReadLine();
            double a = Convert.ToDouble(rub);
            double ien = a * 1.58;
            Console.WriteLine("и это будет: " + ien);
        }
    }
}
